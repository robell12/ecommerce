<h1 class="center">Outdoors</h1>
<hr />


<% @products.each do |p| %>
  <div class="row">
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%= p.name %></span>
              <p> $<%= p.price %> </p>
              <p> By: <%= p.brand %> </p>
              <p> Amount: <%= p.quantity %> </p>
              <p> Isle: <%= p.category %> </p>
              <p> Info: <%= p.description %> </p>
            </div>
            <div class="card-action">
              <h6><%= link_to "Edit", edit_product_path(p) %> </h6>
              <h6> <%= link_to "Delete", product_path(p), method: :delete, data: {confirm: "Sure Bro?"} %> </h6>
            </div>
          </div>
        </div>
      </div>
<% end %>

<%= link_to 'New Product', products_path, class: 'btn black' %>
