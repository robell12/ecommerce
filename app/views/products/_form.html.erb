<div class="row">
	<%= form_for @product do |f| %>
		<div class="row">
			<div class="input-field col m6">
				<%= f.label :name, class: 'active' %>
				<br />
				<%= f.text_field :name %>
			</div>
			<div class="input-field col m6">
				<%= f.label :price, class: 'active' %>
				<br />
				<%= f.number_field :price %>
			</div>
		</div>
		<div class="row">
			<div class="input-field col m6">
				<%= f.label :quantity, class: 'active' %>
				<br />
				<%= f.number_field :quantity %>
			</div>
			<div class="input-field col m6">
				<%= f.label :description, class: 'active' %>
				<br />
				<%= f.text_area :description %>
			</div>
		</div>
		<div class="row">
			<div class="input-field col m6">
				<%= f.label :brand, class: 'active' %>
				<br />
				<%= f.text_field :brand %>
			</div>
			<div class="input-field col m6">
				<%= f.label :category, class: 'active' %>
				<br />
				<%= f.select :category, ['Electronics', 'Furniture', 'Garden', 'Outdoors'] %>
			</div>
		</div>
		<%= f.submit class: "btn", id: "nav" %>
	<% end %>
</div>
